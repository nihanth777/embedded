<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:card_view="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/owner_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner Name"
        android:textSize="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/emerald_blue"
        android:textColorHint="@color/emerald_blue"
        android:layout_margin="5dp">
    </TextView>

    <EditText
        android:id="@+id/owner_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_name_text"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_boarder"
        android:textColor="@color/black"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textSize="30dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/vehicle_num_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/owner_name_edit"
        android:text="Vehicle Number"
        android:textSize="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/emerald_blue"
        android:layout_margin="5dp">
    </TextView>

    <EditText
        android:id="@+id/vehicle_num_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_num_text"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_boarder"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:paddingStart="10dp"
        android:textColorHint="@color/emerald_blue"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/vehicle_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_num_edit"
        android:text="Vehicle Name (optional)"
        android:textSize="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/emerald_blue"
        android:layout_margin="5dp">
    </TextView>

    <EditText
        android:id="@+id/vehicle_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_name_text"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/card_boarder"
        android:textColor="@color/black"
        android:textColorHint="@color/emerald_blue"
        android:textSize="30dp"
        android:paddingStart="10dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/fuel_type_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vehicle_name_edit"
        android:text="Fuel Type"
        android:textSize="20dp"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/emerald_blue"
        android:layout_margin="5dp">
    </TextView>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_below="@+id/fuel_type_text"
        android:hint="Select Item"
        android:textColorHint="@color/emerald_blue"
        app:boxCornerRadiusBottomEnd="23dp"
        app:boxCornerRadiusBottomStart="23dp"
        app:boxCornerRadiusTopEnd="23dp"
        app:boxCornerRadiusTopStart="23dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconDrawable="@drawable/down_arrow"
        app:endIconTint="@color/emerald_blue"
        android:background="@drawable/card_boarder"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/dropdown_fueltype_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/emerald_blue"
            android:textColorHint="@color/emerald_blue"
            android:textColorLink="@color/emerald_blue"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:text="ADD"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:backgroundTintMode="screen"
        android:backgroundTint="@color/emerald_blue"
        >

    </Button>

</RelativeLayout>